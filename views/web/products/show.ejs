<%- include('../_layouts/header') %>

<h1><%= title %></h1>

<div class="row">
    <h1 class="page-header"><%= product.title %></h1>

    <div class="col-xs-12 col-md-5">
        <% if(product.image == "") { %>
            <img class="product_image" src="/defaults/images/product.png" alt="<%= product.title %>">
        <% } else { %>
            <img class="product_image" src="/uploads/images/products/<%= product._id %>/<%= product.image %>" alt="<%= product.title %>">
        <% } %>
        <br>
    </div>
    <div class="col-xs-12 col-md-7">
        <p><%- product.description %></p>
        <p>$<%= parseFloat(product.price).toFixed(2) %></p>
        <% if (loggedIn) { %>
            <form action="/cart/<%= product.id %>/add-to-cart" method="post">
                <button type="submit">Add to cart</button>
            </form>
        <% } else {%>
            <p>You must be logged in to purchase items.</p>
        <% } %>
    </div>
</div>

<%- include('../_layouts/footer') %>