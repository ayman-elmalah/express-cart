<%- include('../_layouts/header') %>

<h1><%= title %></h1>

<div class="row products">

    <% products.forEach(function(product){ %>
        <div class="col-xs-12 col-md-4 p">
            <a class="pa" href="/products/<%= product.slug %>">
                <% if(product.image == "") { %>
                    <img class="product_image" src="/defaults/images/product.png" alt="<%= product.title %>">
                <% } else { %>
                    <img class="product_image" src="/uploads/images/products/<%= product._id %>/<%= product.image %>" alt="<%= product.title %>">
                <% } %>

            </a>
            <h3><%= product.title %></h3>
            <h4>$<%= parseFloat(product.price).toFixed(2) %></h4>
            <a class="vd" href="/products/<%= product.slug %>">View Details</a>
        </div>
    <% }); %>

</div>

<%- include('../_layouts/footer') %>